{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "include": [
    "resources/assets/vue/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
