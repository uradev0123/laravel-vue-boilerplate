// Hide usually unused files, I'm commiting it because there's a lot of root directory files, you can delete it if you want.
{
  "files.exclude": {
    ".env.*": true,
    ".babelrc": true,
    ".editorconfig": true,
    ".htaccess-novhosts": true,
    ".gitattributes": true,
    ".gitlab-ci.yml": true,
    ".travis.yml": true,
    ".vsts-ci.yml": true,
    "artisan": true,
    "appveyor.yml": true,
    "composer.lock": true,
    "docker-compose.yml": true,
    "Dockerfile": true,
    "LICENSE": true,
    "tslint.json": true,
    "tsconfig.json": true,
    "package-lock.json": true,
    "phpunit-log-junit-fix.php": true,
    "phpunit.xml": true,
    "tests-jest.xml": true,
    "yarn.lock": true,
    ".circleci/": true,
    "docker/": true,
    "node_modules/": true,
    "public/css": true,
    "public/js": true,
    "public/fonts": true,
    "vendor/": true
  }
}
